# Production Environment Configuration
# Copy this file to .env.prod and fill in your production values

# Node.js Environment
NODE_ENV=production
PORT=3000

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_secure_mongodb_password_here
MONGO_INITDB_DATABASE=ai_stock_bot

# MongoDB Express Configuration
ME_CONFIG_MONGODB_ADMINUSERNAME=admin
ME_CONFIG_MONGODB_ADMINPASSWORD=your_secure_mongodb_password_here
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=your_secure_web_ui_password_here

# AI Providers Configuration
OPENAI_API_KEY=your_openai_api_key_here
SEGMIND_API_KEY=your_segmind_api_key_here

# YooMoney Payment System Configuration
YOOMONEY_CLIENT_ID=your_yoomoney_client_id_here
YOOMONEY_WALLET=your_yoomoney_wallet_number_here
YOOMONEY_API_URL=https://yoomoney.ru/api
YOOMONEY_QUICKPAY_URL=https://yoomoney.ru/quickpay/confirm.xml
YOOMONEY_WEBHOOK_SECRET=your_secure_yoomoney_webhook_secret_here
YOOMONEY_NOTIFICATION_URI=http://localhost:3000/api/payments/webhook
BACKEND_URL=http://localhost:3000

# Payment Plans Configuration
# Plan 1 (10 images)
PAYMENT_PLAN_1_NAME=10 изображений
PAYMENT_PLAN_1_AMOUNT=2
PAYMENT_PLAN_1_IMAGES=10

# Plan 2 (100 images)
PAYMENT_PLAN_2_NAME=100 изображений
PAYMENT_PLAN_2_AMOUNT=3
PAYMENT_PLAN_2_IMAGES=100

# Plan 3 (1000 images)
PAYMENT_PLAN_3_NAME=1000 изображений
PAYMENT_PLAN_3_AMOUNT=4
PAYMENT_PLAN_3_IMAGES=1000

# Plan 4 (10000 images)
PAYMENT_PLAN_4_NAME=10000 изображений
PAYMENT_PLAN_4_AMOUNT=5
PAYMENT_PLAN_4_IMAGES=10000

# Security Keys (Generate secure random strings)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_exactly_32_characters

# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Backend API Configuration
BACKEND_API_TIMEOUT=30000
DEMO_MODE=false

# Watchtower Notifications (Optional)
# WATCHTOWER_NOTIFICATION_URL=discord://token@id
# WATCHTOWER_NOTIFICATION_URL=slack://token@channel
# WATCHTOWER_NOTIFICATION_URL=telegram://token@chatid

# Trial Subscription Configuration
# Number of trial images for new users
TRIAL_IMAGES_COUNT=10

# Rate Limiting Configuration (Production Settings)
# General API rate limiting (15 minutes window)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=400

# Image generation rate limiting (1 hour window)
IMAGE_GENERATION_WINDOW=3600000
IMAGE_GENERATION_MAX=100

# Upload rate limiting (1 hour window)
UPLOAD_WINDOW=3600000
UPLOAD_MAX=100
