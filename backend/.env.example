# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai-stock-bot

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT=60000

# 123RF FTP Configuration
FTP_HOST=ftp.123rf.com
FTP_PORT=21
FTP_USER=your_ftp_username
FTP_PASSWORD=your_ftp_password
FTP_REMOTE_PATH=/ai_image
FTP_SECURE=false
FTP_TIMEOUT=30000

# File Storage Configuration
TEMP_DIR=./temp
MAX_FILE_SIZE=10485760
CLEANUP_INTERVAL=86400000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# External Image Sources (Optional)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
PIXABAY_API_KEY=your_pixabay_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h

# Encryption Configuration
ENCRYPTION_SECRET_KEY=your_encryption_secret_key_here

# Telegram Bot Configuration (for integration)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Web Interface Configuration
WEB_APP_URL=http://localhost:3001
WEB_APP_SECRET=your_web_app_secret_here

# Stock Services Configuration (Optional - can be set per user)
# 123RF Global Settings
DEFAULT_123RF_HOST=ftp.123rf.com
DEFAULT_123RF_PORT=21
DEFAULT_123RF_REMOTE_PATH=/uploads

# Shutterstock API (for future expansion)
SHUTTERSTOCK_CLIENT_ID=your_shutterstock_client_id
SHUTTERSTOCK_CLIENT_SECRET=your_shutterstock_client_secret

# Adobe Stock API (for future expansion)
ADOBE_STOCK_CLIENT_ID=your_adobe_stock_client_id
ADOBE_STOCK_CLIENT_SECRET=your_adobe_stock_client_secret

# Image Processing Configuration
IMAGE_QUALITY=85
THUMBNAIL_SIZE=300
WATERMARK_ENABLED=false
WATERMARK_TEXT=AI Generated

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@your-domain.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# API Keys for additional services
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
