# ===========================================
# AI Stock Bot - Environment Configuration
# ===========================================

# ===== TELEGRAM BOT =====
# Get your bot token from @BotFather on Telegram
TELEGRAM_TOKEN=your_telegram_token_here

# ===== OPENAI API =====
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===== SEGMIND API =====
# Get your API key from https://www.segmind.com/
SEGMIND_API_KEY=your_segmind_api_key_here

# ===== YOOMONEY PAYMENT SYSTEM =====
# YooMoney wallet number for receiving payments
YOOMONEY_WALLET=your_yoomoney_wallet_number_here

# Secret key for webhook notifications (generate a strong random string)
YOOMONEY_NOTIFICATION_SECRET=your_yoomoney_notification_secret_here

# YooMoney QuickPay URL (usually default)
YOOMONEY_QUICKPAY_URL=https://yoomoney.ru/quickpay/confirm.xml

# Webhook URL for payment notifications (your backend URL + /api/payments/webhook)
PAYMENT_WEBHOOK_URL=http://localhost:3000/api/payments/webhook

# Backend URL for payment success redirects
BACKEND_URL=http://localhost:3000

# ===== DATABASE =====
# MongoDB connection settings
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=ai-stock-bot

# ===== BACKEND API =====
# JWT secret for authentication (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Encryption key for sensitive data (must be exactly 32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key

# Backend API port
PORT=3000

# ===== MONGODB EXPRESS (Optional - for database management) =====
ME_CONFIG_MONGODB_ADMINUSERNAME=admin
ME_CONFIG_MONGODB_ADMINPASSWORD=password123
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=admin

# ===== BOT CONFIGURATION =====
# Set to true to use demo mode with mock images
DEMO_MODE=false

# Backend API timeout in milliseconds
BACKEND_API_TIMEOUT=120000

# ===== DEVELOPMENT =====
# Node environment
NODE_ENV=development
