# ===========================================
# AI Stock Bot - Environment Configuration
# ===========================================

# ===== TELEGRAM BOT =====
# Get your bot token from @BotFather on Telegram
TELEGRAM_TOKEN=your_telegram_token_here

# ===== SEGMIND API =====
# Get your API key from https://www.segmind.com/
SEGMIND_API_KEY=your_segmind_api_key_here

# ===== REPLICATE API =====
# Get your API token from https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here
REPLICATE_TIMEOUT=300000
REPLICATE_MODEL=nightmareai/real-esrgan:42fed1c4974146d4d2414e2be2c5277c7fcf05fcc3a73abf41610695738c1d7b
REPLICATE_SCALE=4
REPLICATE_FACE_ENHANCE=true

# ===== YOOMONEY PAYMENT SYSTEM =====
# YooMoney Application credentials (from YooMoney Developer Console)
YOOMONEY_CLIENT_ID=your_yoomoney_client_id_here
YOOMONEY_WALLET=your_yoomoney_wallet_number_here

# YooMoney API settings
YOOMONEY_API_URL=https://yoomoney.ru/api
YOOMONEY_QUICKPAY_URL=https://yoomoney.ru/quickpay/confirm.xml

# Webhook for payment notifications
YOOMONEY_WEBHOOK_SECRET=your_yoomoney_webhook_secret_here
YOOMONEY_NOTIFICATION_URI=http://localhost:3000/api/payments/webhook

# Backend URL for redirects and API base
BACKEND_URL=http://localhost:3000

# ===== PAYMENT PLANS CONFIGURATION =====
# Plan 1 (10 images)
PAYMENT_PLAN_1_NAME=10 изображений
PAYMENT_PLAN_1_AMOUNT=2
PAYMENT_PLAN_1_IMAGES=10

# Plan 2 (100 images)
PAYMENT_PLAN_2_NAME=100 изображений
PAYMENT_PLAN_2_AMOUNT=3
PAYMENT_PLAN_2_IMAGES=100

# Plan 3 (1000 images)
PAYMENT_PLAN_3_NAME=1000 изображений
PAYMENT_PLAN_3_AMOUNT=4
PAYMENT_PLAN_3_IMAGES=1000

# Plan 4 (10000 images)
PAYMENT_PLAN_4_NAME=10000 изображений
PAYMENT_PLAN_4_AMOUNT=5
PAYMENT_PLAN_4_IMAGES=10000

# ===== DATABASE =====
# MongoDB connection settings
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=ai-stock-bot

# ===== BACKEND API =====
# JWT secret for authentication (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Encryption key for sensitive data (must be exactly 32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key

# Backend API port
PORT=3000

# ===== MONGODB EXPRESS (Optional - for database management) =====
ME_CONFIG_MONGODB_ADMINUSERNAME=admin
ME_CONFIG_MONGODB_ADMINPASSWORD=password123
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=admin

# ===== BOT CONFIGURATION =====
# Set to true to use demo mode with mock images
DEMO_MODE=false

# Backend API timeout in milliseconds
BACKEND_API_TIMEOUT=360000

# ===== DEVELOPMENT =====
# Node environment
NODE_ENV=development

# ===== TRIAL SUBSCRIPTION CONFIGURATION =====
# Number of trial images for new users
TRIAL_IMAGES_COUNT=10

# ===== RATE LIMITING CONFIGURATION =====
# General API rate limiting (15 minutes window)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=400

# Image generation rate limiting (1 hour window)
IMAGE_GENERATION_WINDOW=3600000
IMAGE_GENERATION_MAX=100

# Upload rate limiting (1 hour window)
UPLOAD_WINDOW=3600000
UPLOAD_MAX=100

# ===== FEATURE FLAGS =====
# Enable/disable stock services functionality
STOCKS_ENABLED=true
